<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">New Organisation</h3>
        <div class="actions pull-right">
            <i class="fa fa-times" data-dismiss="modal"></i>
        </div>
    </div>
    <div class="panel-body">
      <div id="validation-errors">
        <% @organisation.errors.full_messages.each do |msg| %>
          <p class="text-danger"><%= msg %> </p>
        <% end %>
      </div>

      <%= form_for @organisation do |f| %>
        <div class="row">
          <div class="col-md-12" id="organisaton_form">
              <div class="form-group">
                  <%= f.text_field :name, class: 'form-control', placeholder: 'Organisation Name', id: 'company-name' %>
              </div>

              <div class="form-group">
                  <%= f.text_field :street_1, class: 'form-control', placeholder: 'Street 1', id: 'street_1' %>
              </div>

              <div class="form-group">
                  <%= f.text_field :street_2, class: 'form-control', placeholder: 'Street 2', id: 'street_2' %>
              </div>

              <div class="form-group">
                  <%= f.text_field :city, class: 'form-control', placeholder: 'City', id: 'city' %>
              </div>

              <div class="form-group">
                  <%= f.text_field :town, class: 'form-control', placeholder: 'Town', id: 'town' %>
              </div>

              <div class="form-group">
                  <%= f.text_field :post_code, class: 'form-control', placeholder: 'Post Code', id: 'post-code' %>
              </div>
          </div>
        </div>

        <div class="clearfix">
            <%= f.submit "Create Organisation", class: 'btn btn-success pull-right' %>
            <button type="reset" class="btn btn-default pull-right reset" data-dismiss="modal">Cancel</button>
        </div>
      <% end %>
    </div>
</div>