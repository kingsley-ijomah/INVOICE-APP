<section id="main-content" class="animated fadeInUp">
    <div class="row">
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Data Tables</h3>
                    <div class="actions pull-right">
                        <i class="fa fa-expand"></i>
                        <i class="fa fa-chevron-down"></i>
                        <i class="fa fa-times"></i>
                    </div>
                </div>
                <div class="panel-body">
                    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Organisation</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% @clients.each do | client | %>
                            <tr>
                                <td><a href="#" class="text-link"><%= client.organisation.name %></a></td>
                                <td><%= client.first_name %></td>
                                <td><%= client.last_name %></td>
                                <td><%= client.email %></td>
                                <td><%= client.tel %></td>
                                <td>
                                    <a class="btn btn-xs btn-square btn-success" href="client-view.html" role="button">view</a>
                                    <a class="btn btn-xs btn-square btn-primary" href="#" role="button">edit</a>
                                </td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                    <ul class="pagination">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <%= link_to new_client_path, class: 'btn btn-block btn-success', role: 'button' do %>
              <i class="fa fa-check"></i> Create new Client
            <% end %>
        </div>
    </div>
</section>