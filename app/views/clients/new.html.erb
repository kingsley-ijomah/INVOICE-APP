<div id="container">
  <div class="row">
      <div class="col-md-9">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">New Client</h3>
                  <div class="actions pull-right">
                      <i class="fa fa-expand"></i>
                      <i class="fa fa-chevron-down"></i>
                      <i class="fa fa-times"></i>
                  </div>
              </div>
              <div class="panel-body">
                  <div class="row">
                      <div class="col-md-12">
                          <div class="form-group">
                              <select name="" id="input" class="form-control">
                                  <option value="">-- Select Organisation --</option>
                              </select>
                          </div>

                          <div class="form-group">
                              <select name="" id="input" class="form-control">
                                  <option value="">-- Contact Type --</option>
                                  <option value="">Primary Contact (Receives invoice sent to org.)</option>
                                  <option value="">Secondary Contact</option>
                              </select>
                          </div>

                          <div class="form-group">
                              <input type="text" class="form-control" placeholder="First Name" id="first-name">
                          </div>

                          <div class="form-group">
                              <input type="text" class="form-control" placeholder="Last Name" id="last-name">
                          </div>

                          <div class="form-group">
                              <input type="text" class="form-control" placeholder="Email" id="email">
                          </div>

                          <div class="form-group">
                              <input type="text" class="form-control" placeholder="Telephone" id="telephone">
                          </div>

                          <div class="form-group">
                              <textarea class="form-control" placeholder="Internal Note"></textarea>
                          </div>
                      </div>
                  </div>

                  <div class="clearfix">
                      <button type="submit" class="btn btn-success pull-right">Save</button>
                      <button type="reset" class="btn btn-default pull-right reset">Cancel</button>
                  </div>
              </div>
          </div>
      </div>

      <div class="col-md-3">
          <a class="btn btn-block btn-success" href="new-organisation.html" role="button" data-toggle="modal" data-target=".load-new-organisation"><i class="fa fa-check"></i> Create new Organisation</a>
