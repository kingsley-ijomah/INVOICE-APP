<div id="container">
  <div class="row">
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">New Invoice</h3>
          <div class="actions pull-right">
            <i class="fa fa-expand"></i>
            <i class="fa fa-chevron-down"></i>
            <i class="fa fa-times"></i>
          </div>
        </div>

        <% @invoice.errors.full_messages.each do |msg| %>
          <p class="text-danger"><%= msg %> </p>
        <% end %>

        <%= form_for @invoice do |f| %>
          <div class="panel-body">
            <div class="row header-row">
              <div class="col-md-7">
                <div class="form-group form-inline">
                  <label>Client</label>
                  <%= select("invoice", "client_id", Client.all.collect {|p| [ p.first_name, p.id ] }, {prompt: 'Select Client'}, class: 'form-control client-field', 
                             required: true) %>
                         </div>
                       </div>
                       <div class="col-md-5">
                         <div class="form-inline">
                           <div class="invoice-header">
                             <p>
                             <div class="form-group">
                               <label>Invoice Number</label>
                               <div class="input-group">
                                 <div class="input-group-addon">#</div>
                                 <%= f.text_field :number, class: 'form-control invoice-field', required: true, value: generate_invoice_number  %>
                               </div>
                             </div>
                             </p>

                             <p>
                             <div class="form-group">
                               <label>Date of Isssue</label>
                               <div class='input-group date' id='datetimepicker8'>
                                 <%= f.text_field :date_of_issue, class: 'form-control', required: true %>
                                 <span class="input-group-addon">
                                   <span class="fa fa-calendar">
                                   </span>
                                 </span>
                               </div>
                             </div>
                             </p>
                             <p>
                             <div class="form-group">
                               <label>PO Number</label>
                               <%= f.text_field :po_number, class: 'form-control' %>
                             </div>
                             </p>

                             <p>
                             <div class="form-group">
                               <label>Discount</label>
                               <div class="input-group">
                                 <%= f.text_field :discount, class: 'form-control discount-field', placeholder: '0' %>
                                 <div class="input-group-addon">%</div>
                               </div>
                             </div>
                             </p>
                           </div>
                         </div>
                       </div>
                     </div>

                     <div class="row items-row">
                       <div class="col-md-12">
                         <table class="table table-bordered">
                           <thead>
                             <tr class="active">
                               <th>Qty</th>
                               <th>Kind</th>
                               <th>Description</th>
                               <th>Price</th>
                               <th>Total</th>
                               <th></th>
                             </tr>
                           </thead>
                           <tbody id="item-list">

                           </tbody>
                           <tfoot>
                             <tr class="active">
                               <td colspan="6">
                                 <%= link_to new_invoice_item_path(invoice_id: @invoice.id), class: 'btn btn-xs btn-success', role: 'button', id: 'add_line', 
                                   remote: true do %>
                                   <i class="fa fa-plus"></i>Add Line
                                 <% end %>
                               </td>
                             </tr>
                           </tfoot>
                         </table>
                       </div>
                     </div>

                     <div class="row">
                       <div class="col-md-8">

                       </div>
                       <div class="col-md-4">
                         <table class="table pull-right">
                           <tbody>
                           <tr>
                             <td>Invoice Total</td>
                             <td id="total">£0.00</td>
                           </tr>
                           <tr>
                             <td>Paid to Date</td>
                             <td id="paid">£0.00</td>
                           </tr>
                           <tfoot>
                             <tr class="active">
                               <td><b>Balance (GBP)</b></td>
                               <td><b id="balance">£0.00</b></td>
                             </tr>
                           </tfoot>
                           </tbody>
                         </table>
                       </div>
                     </div>

                     <div class="row notes-row">
                       <div class="col-md-8">
                         <div class="form-group">
                           <label>Terms (<%= link_to 'Set Default', new_invoice_setting_path, :data => {target: '.load-new-invoice-settings', toggle: 'modal'} %>)</label>
                           <%= f.text_area :terms, class: 'form-control', rows: 3, required: true %>
                         </div>
                       </div>
                       <div class="col-md-4">
                         <div class="form-group">
                           <label>Notes</label>
                           <%= f.text_area :note, class: 'form-control', rows: 3 %>
                         </div>
                       </div>
                     </div>

                     <div class="modal fade load-new-invoice-settings" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                       <div class="modal-dialog modal-md">
                         <div class="modal-content">


                         </div>
                       </div>
                     </div>


                     <hr>

                     <div class="clearfix">
                       <%= f.submit "Save Draft", class: 'btn btn-success pull-right form-btn' %>
                     </div>
                   </div>
                 <% end %>
               </div>
             </div>

             <div class="col-md-3">
               <%= link_to new_client_path, class: 'btn btn-block btn-success', role: 'button' do %>
                 <i class="fa fa-check"></i> Create new Client
               <% end %>
             </div>
           </div>
         </div>
         <!--main content end

