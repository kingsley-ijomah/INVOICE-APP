<section class="container animated fadeInUp">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
          <div id="login-wrapper">
              <header>
                  <div class="brand">
                      <a href="index.html" class="logo">
                          <i class="icon-layers"></i>
                          <span>INVOICE</span>SYSTEM</a>
                  </div>
              </header>
              <div class="panel panel-primary">
                  <div class="panel-heading">
                      <h3 class="panel-title">     
                     Sign In
                  </h3>
                  </div>
                  <div class="panel-body">
                      <p> Login to access your account.</p>
                      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "form-horizontal", role: "form", id: 'new_session'}) do |f| %>
                          <div class="form-group">
                              <div class="col-md-12">
                                  <%= f.email_field :email, class: 'form-control', id: 'email', placeholder: 'Email Address' %>
                                  <i class="fa fa-user"></i>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-md-12">
                                  <%= f.password_field :password, class: 'form-control', id: 'password', placeholder: 'Password' %>
                                  <i class="fa fa-lock"></i>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-md-12">
                                  <%= f.submit "Sign In", class: 'btn btn-primary btn-block' %>
                              </div>
                          </div>
                      <% end %>
                  </div>
              </div>
          </div>
      </div>
  </div>

</section>